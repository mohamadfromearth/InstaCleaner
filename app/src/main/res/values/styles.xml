<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="circleImageViewWithStroke" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">@color/md_blue_400</item>
    </style>


    <style name="GeneralImageView.rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3%</item>
    </style>


    <style name="border">
        <item name="borderRound">@dimen/distance_small</item>
    </style>


    <style name="corner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40%</item>
    </style>


    <style name="popUp">

        <item name="android:popupBackground">@drawable/rounded</item>
    </style>


    <style name="materialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:shape">oval</item>
    </style>


    <style name="GeneralButton" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/iran_sans_web_light</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconSize">18dp</item>
        <item name="iconTint">@color/md_white_1000</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="GeneralButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/iran_sans_web_light</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="iconTint">@color/md_green_500</item>
        <item name="android:textColor">@color/md_green_500</item>
    </style>
    <style name="GeneralButton.ToolbarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/iran_sans_web_light</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="iconTint">@color/md_white_1000</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>


    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/iran_sans_web_ultra_bold</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_gravity">end</item>

    </style>


    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
<!--        <item name="android:layout_width">wrap_content</item>-->
<!--        <item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_gravity">right</item>
        <item name="android:fontFamily">@font/iran_sans_web_bold</item>
<!--        <item name="android:layoutDirection">rtl</item>-->
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>

    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/iran_sans_web_light</item>
    </style>


    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>